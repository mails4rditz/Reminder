{
    "manifest_version": 3,
    "name": "Home Maintenance Reminder",
    "version": "1.0",
    "description": "Daily reminders for home maintenance tasks",
    "permissions": [
        "alarms",
        "notifications",
        "storage"
    ],
    "background": {
        "service_worker": "extension/background.js"
    },
    "action": {
        "default_popup": "extension/popup.html",
        "default_title": "Home Maintenance"
    },
    "icons": {
        "16": "extension/icon16.png",
        "48": "extension/icon48.png",
        "128": "extension/icon128.png"
    }
}